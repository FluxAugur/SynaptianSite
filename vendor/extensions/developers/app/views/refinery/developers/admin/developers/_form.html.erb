<%= form_for [refinery, :developers_admin, @developer], :html => { :multipart => true } do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @developer,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>

  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:bio],
                :object => "developers/developer" -%>
  </div>

  <div class='field'>
    <%= f.label :avatar -%>
    <%= f.file_field :avatar -%>
  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.developers.admin.developers.developer'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @developer.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
