<ul>
  <% if ::Refinery::Developers::Admin::DevelopersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.developers_admin_developers_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_developers_admin_developer_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Developers::Admin::DevelopersController.sortable? && ::Refinery::Developers::Developer.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Developers"),
                 refinery.developers_admin_developers_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Developers"),
                 refinery.developers_admin_developers_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
